<div class="card-white-list">

  <h1>EDIT TASK</h1>
  <h2><%= @task.title %></h2>

  <div>
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :details %>
      <%= f.text_field :details %>

      <%= f.label :completed %>:
      <%= f.check_box :completed %>

      <%= f.submit %>
    <% end %>
  </div>

</div>
